<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <referenceBlock name="header.links" remove="true" />

            <block class="Magento\Cms\Block\Block" name="header.top.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">
                        header-top
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <container
                name="nav-section-left"
                htmlTag="div"
                htmlClass="nav-section-left"
                before="logo"
            />

            <container
                name="nav-section-right"
                htmlTag="div"
                htmlClass="nav-section-right"
                after="logo"
            />


            <referenceBlock name="catalog.compare.link" remove="true" />

        </referenceContainer>

        <referenceContainer name="page.top">
            <referenceBlock name="navigation.sections" remove="true" />
        </referenceContainer>

        <referenceContainer name="nav-section-left">
            <block class="Magento\Cms\Block\Block" name="header.left.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">
                        header-left
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <move element="store.menu" destination="nav-section-left" after="header.left.cms" />

        <referenceContainer name="nav-section-right">
            <container
                name="nav-section-ctas"
                htmlClass="nav-section-ctas"
                htmlTag="div"
                before="header-right-nav"
            />
            <block
                class="Magento\Customer\Block\Account\AuthorizationLink"
                name="header.profile.link"
                template="Magento_Customer::account/link/authorization.phtml"
            />

            <block class="Magento\Cms\Block\Block" name="header.right.nav">
                <arguments>
                    <argument name="block_id" xsi:type="string">
                        header-right-nav
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <move element="top.search" destination="nav-section-ctas" />
        <move element="header.profile.link" destination="nav-section-ctas" after="top.search" />
        <move element="minicart" destination="nav-section-ctas" after="header.profile.link" />

    </body>
</page>
    